<div class='card-header'>
  <h2> Crawl the page </h2>
</div>
<div class='card-body'>
  <%= form_tag(scrap_crawl_index_path, method: :post) do %>
    <div class='form-group row'>
      <div class='col-md-6'>
        <%= label_tag :url, 'Crawl Url', class: 'font-weight-bold' %>
        <%= text_field_tag :url, '', class: 'form-control', required: true %>
      </div>
    </div>

    <div class='form-group row'>
      <div class='col-md-6'>
        <%= label_tag :token, 'Crawl API Token', class: 'font-weight-bold' %>
        <%= text_field_tag :token, '', class: 'form-control', required: true %>
      </div>
    </div>

    <div class='actions'>
      <%= submit_tag "Submit" %>
    </div>
  <% end %>
</div>
